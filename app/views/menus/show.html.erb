<% content_for :primary_content do %>
  <div class="lg:p-10 pt-10 px-4">
    <h2 class="heading text-4xl text-center font-bold pt-4 mb-8">Menu</h2>
    <%= @menu.name %>
  </div>
<% end %>

<% content_for :secondary_content do %>
  <div class="px-8 pt-6 pb-8">
    <%= render_svg "table", styles:"max-w-full h-auto mb-4" %>
    <h4>Create a new menu on QR Code Menu</h4>
    <p class="text-sm italic">Each menu requires the following:</p>
    <ul class="mt-1">
      <li class="flex items-center space-x-1">
        <span>Name</span>
        <% unless @menu.name.empty? %>
          <%= render_svg "icons/checkmark", styles:" text-green-600 w-5 h-5" %>
        <% end %>
      </li>
      <li>Categories</li>
      <li>Menu items</li>
    </ul>
  </div>

<% end %>

<%= render "base_layout" %>
