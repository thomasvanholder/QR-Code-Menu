    <h2 class="heading text-4xl text-center font-bold pt-4 mb-8">Create a New Menu</h2>

    <%= render 'form', menu: @menu %>
  </div>
<% end %>

<% content_for :secondary_content do %>
 <div class="px-8 pt-6 pb-8">
