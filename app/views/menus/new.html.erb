    <p class="text-sm italic">Each menu requires the following:</p>
    <ul class="mt-1">
      <li>Name</li>
      <li>Catogries</li>
      <li>Menu items</li>
    </ul>
  </div>

<% end %>

<%= render "base_layout" %>
